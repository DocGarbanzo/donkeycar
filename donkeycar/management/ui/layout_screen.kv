#:include common.kv

<LayoutScreen>:
    name: 'layout'

    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: 0.5

            BackgroundBoxLayout:
                orientation: 'vertical'
                Header:
                    title: 'Config Loader'
                    description:
                        "Load config from car directory, typically ~/mycar"
                BoxLayout:
                    spacing: 10
                    RoundedButton:
                        text: 'Load config'
                    MyLabel:
                        text: '/home/dirk/car/car2'

            BackgroundBoxLayout:
                orientation: 'vertical'
                Header:
                    title: 'Tub Loader'
                    description:
                        "Load tub from within the car directory, typically ./data"
                BoxLayout:
                    spacing: 10
                    RoundedButton:
                        text: 'Load tub'
                    MyLabel:
                        text: '/home/dirk/car/car2/data'

        BackgroundBoxLayout:
            orientation: 'vertical'
            size_hint_y: 1.5
            Header:
                size_hint_y: 0.25
                title: 'Navigation'
                description:
                    "Use control panel or slider to navigate through tub and " \
                    "select records"

            BoxLayout:
                orientation: 'horizontal'
                spacing: 10
                GridLayout:
                    cols: 2
                    MyLabel:
                        text: 'car/speed'
                    MyLabel:
                        text: '2.45'
                    MyLabel:
                        text: 'user/angle'
                    MyLabel:
                        text: '-0.23'
                    MyLabel:
                        text: 'user/throttle'
                    MyLabel:
                        text: '0.88'
                Label:
                    text: 'Image'
                BoxLayout:
                    spacing: 2
                    orientation: 'vertical'
                    BoxLayout:
                        size_hint_y: 0.5
                        orientation: 'horizontal'
                        MyLabel:
                            text: 'Record'
                        MyLabel:
                            text: '12345'
                        RoundedButton:
                            text: '+2.0'
                    GridLayout:
                        spacing: 2
                        size_hint_y: 2.0
                        cols: 2
                        RoundedButton:
                            text: '<'
                        RoundedButton:
                            text: '>'
                        RoundedButton:
                            text: '<<'
                        RoundedButton:
                            text: '>>'
                        RoundedButton:
                            text: 'start'
                        RoundedButton:
                            text: 'stop'
            Slider:
                size_hint_y: 0.25


        BackgroundBoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.6
            Header:
                title: 'Tub Cleaner'
                description:
                    "Select records using intervals to delete / restore or set "\
                    "a filter. The filter is temporary in the app."
            BoxLayout:
                orientation: 'horizontal'
                spacing: 10
                RoundedButton:
                    text: 'Set left'
                RoundedButton:
                    text: 'Set right'
                Label:
                    text: '[100, 334]'
                RoundedButton:
                    text: 'Delete'
                RoundedButton:
                    text: 'Restore'
                RoundedButton:
                    text: 'Reload tub'
            BoxLayout:
                orientation: 'horizontal'
                spacing: 10
                RoundedButton:
                    size_hint_x: 0.19
                    text: 'Set filter'
                TextInput:
                    text: 'car/speed > 0.6'


        BackgroundBoxLayout:
            orientation: 'vertical'
            size_hint_y: 1.5
            Label:
                size_hint_y: 10
                text: 'Graph'
            BoxLayout:
                orientation: 'horizontal'
                spacing: 10
                RoundedButton:
                    text: 'Reload graph'
                RoundedButton:
                    text: 'Browser graph'

        BackgroundBoxLayout:
            size_hint_y: None
            height: 20

            MyLabel:
                valign: 'bottom'
                font_size: '12sp'
                color: 0.6, 0.6, 0, 1
                text: 'Here is the status bar telling you stuff'
